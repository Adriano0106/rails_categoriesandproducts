<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1>Categorias</h1>

  <br>

    <%= search_form_for @q do |f| %>
      <%#= f.label :procure_aqui %>
      <%= f.search_field :name_cont, class:"form-control" %>
      <%= f.submit :Buscar, class:"btn btn-outline-success" %>
    <% end %>

  <br>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= link_to 'Mostrar', category %></td>
          <!-- <td><%= link_to 'Editar', edit_category_path(category) %></td> -->
          <!-- <td><%= link_to 'Apagar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

    <!-- <%= link_to 'Nova Categoria', new_category_path, class: "btn btn-primary" %> -->
    <%= link_to 'Voltar', home_path, class: "btn btn-dark" %>
</div>
