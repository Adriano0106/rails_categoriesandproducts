<div class="centered">
  <p id="notice"><%= notice %></p>

  <h1>Produtos</h1>

  <br>

    <%= search_form_for @q do |f| %>
      <%#= f.label :procure_aqui %>
      <%= f.search_field :name_cont, class:"form-control" %>
      <%= f.submit :Buscar, class:"btn btn-outline-success" %>
    <% end %>

  <br>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Categoria</th>
        <th>Nome</th>
        <!-- <th>Descrição</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.category.name %></td>
          <td><%= product.name %></td>
          <!-- <td><%= product.description %></td> -->
          <td><%= link_to 'Mostrar', product %></td>
          <!-- <td><%= link_to 'Editar', edit_product_path(product) %></td> -->
          <!-- <td><%= link_to 'Apagar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

    <!-- <%= link_to 'Novo Produto', new_product_path, class:"btn btn-primary"  %> -->
    <%= link_to 'Voltar', home_path, class:"btn btn-info"  %>
</div>
